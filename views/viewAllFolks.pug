include head 
section.bg-light.py-2
  nav.navbar.navbar-expand-lg.bg-light.w-75.w-100.mx-auto(style='background-color: rgba(0, 0, 0, 0.2);')
    .container-fluid
      a.navbar-brand.text-dark.fw-semibold.w-25.ms-lg-5(href='#') CCSRP
      button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
        span.navbar-toggler-icon
      #navbarSupportedContent.collapse.navbar-collapse
        ul.navbar-nav.mb-2.mb-lg-0.ms-auto.me-lg-5
          li.nav-item
            a.nav-link.text-dark.active.btn.btn-outline-primary.px-4.fw-semibold.border-0(aria-current='page' href='/home') Home
          li.nav-item
            a.nav-link.text-dark.ms-3.btn.btn-outline-primary.px-4.fw-semibold.border-0(href='#about') About
          li.nav-item
            a.nav-link.text-dark.ms-3.btn.btn-outline-primary.px-4.fw-semibold.border-0(href='#package') Contact
          if user  
            li.nav-item
              a.nav-link.text-dark.ms-3.btn.btn-outline-primary.px-4.fw-semibold.border-0(href='#',class='logout-button') Logout
          else    
            li.nav-item
              a.nav-link.text-dark.ms-3.btn.btn-outline-primary.px-4.fw-semibold.border-0(href='/login') Login
h1(style="text-align:center; margin-top:3px;")=`Notify registered people of the event ${service.serviceName}`
form.mt-5.emailMessage
  .form-group
    label(for='EventId') Event Id
    input#EventId.form-control(type='email' aria-describedby='emailHelp' placeholder='Enter email' readonly value=`${service._id}`)
  .form-group
    label(for='exampleInputPassword1') Message
    input#message.form-control(type='text' placeholder='Enter your message')

  button.btn.btn-primary(type='submit') Send email

h1(style="text-align:center; margin-top:3px;")=`Registered People for the event ${service.serviceName}`
.row.mt-3
  each s in service.registeredFolks
        .col-lg-4.col-md-6.col-12
            .card
                .card-body
                    h5.card-title(style="text-align:center;")=s.name
                    h3(style="text-align:center; margin-top:3px;")
                        span(style="margin:3px;color:black;") City: 
                        span(style="margin:3px;color:green;")=s.city
                    h3(style="text-align:center; margin-top:3px;")
                        span(style="margin:3px;color:black;") Email
                        span(style="margin:3px;color:red;")=s.email
                    
include footer
